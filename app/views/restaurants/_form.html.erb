<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(@restaurant) do |f|%>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>
    </div>
  </div>
</div>


